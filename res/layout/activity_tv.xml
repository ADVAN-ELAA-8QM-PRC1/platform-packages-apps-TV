<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true" >

    <com.android.tv.TunableTvView android:id="@+id/tv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <com.android.tv.TunableTvView android:id="@+id/pip_view"
        android:visibility="invisible"
        android:layout_margin="30dp"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:layout_gravity="right|top" />

    <LinearLayout
        android:id="@+id/control_guide"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@android:drawable/ic_media_previous" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_media_next" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/channel_banner" />
    </FrameLayout>

    <com.android.tv.ui.MainMenuView
        android:id="@+id/main_menu"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:padding="22dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:visibility="invisible"
        android:background="#AA000000"
        lb:verticalMargin="20dp" />

</FrameLayout>
